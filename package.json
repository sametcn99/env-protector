{
  "name": "env-protector",
  "displayName": "env-protector",
  "description": "Protect your environment files from being exposed",
  "version": "1.0.5",
  "engines": {
    "vscode": "^1.93.0"
  },
  "publisher": "sametcn99",
  "icon": "icon.png",
  "categories": [
    "Other"
  ],
  "homepage": "https://sametcc.me/env-protector",
  "author": {
    "email": "sametcn99@gmail.com",
    "name": "sametcn99",
    "url": "https://sametcc.me"
  },
  "license": "GPL-3.0-only",
  "readme": "README.md",
  "repository": {
    "type": "git",
    "url": "https://github.com/sametcn99/env-protector"
  },
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "env-protector.hide-env-files",
        "title": "Hide Environment Files",
        "shortTitle": "Hide env files",
        "category": "env-protector"
      },
      {
        "command": "env-protector.show-env-files",
        "title": "Show Environment Files",
        "category": "env-protector"
      },
      {
        "command": "env-protector.mask-env-values",
        "title": "Mask Environment Values",
        "category": "env-protector"
      },
      {
        "command": "env-protector.add-env-variable",
        "title": "Add Environment Variable",
        "category": "env-protector"
      },
      {
        "command": "env-protector.remove-env-variable",
        "title": "Remove Environment Variable",
        "category": "env-protector"
      }
    ],
    "customEditors": [
      {
        "viewType": "env-protector.envFileEditor",
        "displayName": "env-protector Environment File Editor",
        "priority": "default",
        "selector": [
          {
            "filenamePattern": "**/.env*"
          }
        ]
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test",
    "prettier": "npx prettier . --write",
    "vsce": "vsce package"
  },
  "devDependencies": {
    "@types/jsdom": "^21.1.7",
    "@types/mocha": "^10.0.7",
    "@types/node": "20.x",
    "@types/vscode": "^1.93.0",
    "@typescript-eslint/eslint-plugin": "^8.3.0",
    "@typescript-eslint/parser": "^8.3.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "eslint": "^9.9.1",
    "node-loader": "^2.0.0",
    "ts-loader": "^9.5.1",
    "typescript": "^5.5.4",
    "webpack": "^5.94.0",
    "webpack-cli": "^5.1.4"
  },
  "dependencies": {
    "bufferutil": "^4.0.8",
    "canvas": "^2.11.2",
    "jsdom": "^25.0.0",
    "prettier": "^3.3.3",
    "utf-8-validate": "^6.0.4"
  }
}
